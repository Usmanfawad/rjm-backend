# =========================
# Application
# =========================
APP_NAME=RJM MIRA Backend
APP_VERSION=1.0.0

# =========================
# Database
# =========================
# Option 1: Local SQLite (default if DATABASE_URL is blank)
# Leave DATABASE_URL empty to use: sqlite+aiosqlite:///./local.db
DATABASE_URL=
LOCAL_SQLITE_PATH=sqlite+aiosqlite:///./local.db 
# Option 2: Postgres / Supabase (uncomment and fill when you get access)
# DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.xxx.supabase.co:5432/postgres?sslmode=require

# Optional Supabase DB components (alternative to DATABASE_URL)
SUPABASE_DATABASE_NAME=postgres
SUPABASE_DATABASE_USER=postgres
SUPABASE_DATABASE_PASSWORD=
SUPABASE_DATABASE_HOST=
SUPABASE_DATABASE_PORT=5432

# =========================
# Supabase Auth (OPTIONAL)
# Only needed if you plan to use the /auth endpoints
# =========================
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# =========================
# OpenAI
# =========================
OPENAI_API_KEY=
OPENAI_MODEL=

# Embeddings model for RAG
OPENAI_EMBEDDING_MODEL=
# Optional tuning for completions
OPENAI_TEMPERATURE=
OPENAI_TOP_P=

# =========================
# Pinecone (RJM vector store)
# =========================
PINECONE_API_KEY=
PINECONE_INDEX_NAME=
PINECONE_REGION=

# =========================
# RJM Document Corpus
# =========================
# Directory (relative to project root) containing the RJM .txt files:
# rjm_docs/
#   Packaging Logic MASTER 10-22-25.txt
#   Phylum Index MASTER 10-22-25.txt
#   Narrative Library 10-23-25.txt
#   MIRA/RJM MIRA_Reasoning Architecture.txt
#   MIRA/MIRA_Developer Integration.txt
#   RJM API PACKAGE   (10.10.25)/RJM API Overview.txt
#   RJM API PACKAGE   (10.10.25)/RJM API Integration Guide.txt
RJM_DOCS_DIR=rjm_docs